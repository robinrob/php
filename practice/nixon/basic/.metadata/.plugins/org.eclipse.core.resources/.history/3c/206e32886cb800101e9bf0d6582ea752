<?php
//Testing various (very useful) array functions.

$test = array("Robin", 4, "Smith");
print_array($test);

echo "is_array(): " . (is_array($test) ? "yes" : "no") . "<br>";
echo "count(): " . count($test) . "<br>";
echo "sort():<br>";
sort($test);
print_array($test);



function print_array($array)
{
	$j = 0;
	foreach($array as $item)
	{
		echo "array[" . $j++ . "]: $item<br>";
	}
}

?>